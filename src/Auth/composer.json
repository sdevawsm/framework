{
    "name": "lady-php/auth",
    "description": "Módulo de autenticação do LadyPHP Framework",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "lady-php/support": "^1.0",
        "firebase/php-jwt": "^6.0",
        "lady-php/database": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "LadyPHP\\Auth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LadyPHP\\Auth\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
} 