{
    "name": "lady/framework-database",
    "description": "MÃ³dulo Database do LadyPHP Framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "LadyPHP Team",
            "email": "team@ladyphp.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "psr/log": "^3.0",
        "lady/framework-core": "^1.0",
        "lady/framework-foundation": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Lady\\Database\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lady\\Database\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyse"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
} 